{% extends 'base.html.twig' %}

{% block title %}Realisteurs index{% endblock %}

{% block body %}
    <h1>Realisteurs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_real</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for realisteur in realisteurs %}
            <tr>
                <td>{{ realisteur.id }}</td>
                <td>{{ realisteur.idReal }}</td>
                <td>{{ realisteur.nom }}</td>
                <td>{{ realisteur.prenom }}</td>
                <td>
                    <a href="{{ path('app_realisteurs_show', {'id': realisteur.id}) }}">show</a>
                    <a href="{{ path('app_realisteurs_edit', {'id': realisteur.id}) }}">edit</a>
                </td>
            </tr>
