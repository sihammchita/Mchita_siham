{% extends 'base.html.twig' %}

{% block title %}Acteurs index{% endblock %}

{% block body %}
    <h1>Acteurs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_acteur</th>
                <th>Nom</th>
                <th>Date_naissance</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for acteur in acteurs %}
            <tr>
                <td>{{ acteur.id }}</td>
                <td>{{ acteur.idActeur }}</td>
                <td>{{ acteur.nom }}</td>
                <td>{{ acteur.dateNaissance ? acteur.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ acteur.role }}</td>
                <td>
                    <a href="{{ path('app_acteur_show', {'id': acteur.id}) }}">show</a>
                    <a href="{{ path('app_acteur_edit', {'id': acteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_acteur_new') }}">Create new</a>
{% endblock %}
